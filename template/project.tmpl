{{define "main"}}
	<h6>Projects</h6>
	<br>
	<div class="nm-panel is-level-300">
		<div class="_dp-f _jtfct-spbtw _alit-ct">
			<div class="lo-grid-span-horizontal _g-4 _mgl-at">
				<a class="nm-button -small" href="{{route "project.create"}}">
					Create
				</a>
			</div>
		</div>

		<div class="nm-table-container _mgt-6">
			<table class="nm-table is-variant-compact">
				<thead>
				<tr>
					<th>Name</th>
					<th>ID</th>
					<th>Number</th>
					<th class="is-collapse is-align-right"></th>
				</tr>
				</thead>
				<tbody>
                {{range .Page.Projects}}
					<tr>
						<td>
							<a href="{{route "dashboard" (param "project" .Project)}}" class="nm-link">
								<strong>{{.Name}}</strong>
							</a>
						</td>
						<td>{{.Project}}</td>
						<td>{{.ID}}</td>
						<td>
							<a href="{{route "project.create" (param "project" .Project)}}">
								<div class="icon-button">
									<i class="fa-solid fa-pen"></i>
								</div>
							</a>
							<button class="icon-button" on:click="{() => deleteItem(it.project)}">
								<i class="fa-solid fa-trash-alt"></i>
							</button>
						</td>
					</tr>
                {{else}}
					<td colspan="4" class="_tal-ct">No data</td>
                {{end}}
				</tbody>
			</table>
		</div>
	</div>
{{end}}
